#include<graphics.h>
#include<conio.h>
#include<stdio.h>

void linebres(int, int, int, int);

int main()
{
    int x1, y1, x2, y2;
    int gd = DETECT, gm;

    initgraph(&gd, &gm, "");

    printf("Enter starting coordinate: ");
    scanf("%d %d", &x1, &y1);

    printf("Enter ending coordinate: ");
    scanf("%d %d", &x2, &y2);

    linebres(x1, y1, x2, y2);

    getch();
    closegraph();
    return 0;
}

void linebres(int x1, int y1, int x2, int y2)
{
    int dx = abs(x2 - x1);
    int dy = abs(y2 - y1);

    int sx = (x1 < x2) ? 1 : -1;
    int sy = (y1 < y2) ? 1 : -1;

    int err = dx - dy;

    while (1)
    {
        putpixel(x1, y1, RED);

        if (x1 == x2 && y1 == y2)
            break;

        int e2 = 2 * err;

        if (e2 > -dy)
        {
            err -= dy;
            x1 += sx;
        }

        if (e2 < dx)
        {
            err += dx;
            y1 += sy;
        }

        delay(10);
    }
}
